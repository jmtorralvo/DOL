.slider{ 
  &.slider-horizontal{
    width: 100%;
    &.has-controls{
      width: 60%;
      margin-left: 20%;
    }
  }
  .slider-track{
    background: $colorSinResaltar;
    @include box-shadow(none);
    filter: progid:DXImageTransform.Microsoft.gradient(enabled = false);
    .slider-selection{
      background: $colorResaltado;
      @include box-shadow(none);
      filter: progid:DXImageTransform.Microsoft.gradient(enabled = false);
    }
    .slider-handle {
      border-width: 7px;
      width: 20px;
      height: 20px;
      @include box-shadow(#000 0 0 8px -2px);
      border-color: #fff;
      background: $colorResaltado;
      @include opacity(1);
    }
  }
  .tooltip{
    cursor: pointer;
    z-index: auto;
    &.top {
      margin-top: 22px;
      top: 0 !important;
      padding-top: 10px;
      .tooltip-arrow{
        border-width: 0 5px 11px 5px;
        border-bottom-color: #999;
        top: 0;
      }
    }
    .tooltip-inner{
      @include border-radius(50%);
      padding: 0;
      height: 34px;
      width: 34px;
      padding-top: 6px;
      font-family: $fontWeb01Bold;
      font-size: 15px;
      background: #999;
      text-align: center;
      color: #fff;
    }
  }
  &.slider-vertical{
    height: 129px;
    .tooltip {
      &.right {
        padding-left: 11px;
        .tooltip-arrow {
          border-width: 5px 11px 5px 0;
          border-right-color: #999;
        }
      }
      .tooltip-inner {
        @include border-radius(4px);
        height: auto;
        width: auto;
        padding: 10px;
      }
    }
  }
}

.slider-stepper{
  display: block !important;
  top: -23px;
  position: relative;
  width: 100%;
  .button-wrapper{
    width: 15%;
    &.button-less{
      float: left;
      text-align: right;
    }
    &.button-more{
      float: right;
    }
    .glyphicon{
      font-size: 14px;
      top: -2px;
    }
  }
}
.slider-stepper.vertical{
  top: -28px;
  left: -32px;
  .button-wrapper{
    float: none;
    position: absolute;
    &.button-less{
      text-align: left;
    }
    &.button-more{
      bottom: 10px;
    }
  }
}