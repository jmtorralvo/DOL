.tooltip{
  .tooltip-inner{
    background-color: $tooltipInfoColor;
    font-size: 13px;
    color: #000;
    font-family: $fontWeb01Regular;
    text-align: left;
    padding: 15px;
    max-width: 484px;
  }
  &.right{
    .tooltip-arrow{
      border-right-color: $tooltipInfoColor;
    }
  }
  &.left{
    .tooltip-arrow{
      border-left-color: $tooltipInfoColor;
    }
  }
  &.top{
    .tooltip-arrow{
      border-top-color: $tooltipInfoColor;
    }
  }
  &.bottom{
    .tooltip-arrow{
      border-bottom-color: $tooltipInfoColor;
    }
  }
}

.tooltip-info{
  cursor: pointer;
  font-family: $fontWeb01Bold;
  font-size: 12px;
  color: #fff;
  width: 20px;
  height: 20px;
  display: inline-block;
  text-align: center;
  background-color: $tooltipInfoIconBackground;
  @include border-radius(50%);
  &:hover{
    color: #fff;
  }
}

.img-tooltip{
  float:left;
  margin-right:10px; 
}
