.nuevo-diagnostico-content{
  margin-bottom:60px;
}
.homejumbotron{
  background: url($rutaImagenes+"home-jumbotron2.jpg") no-repeat center center;
  height:273px;
  background-size: cover;
  text-align:center;
  color:#fff;
  margin-bottom:28px; 
  h2{
    color:#6C9EC4;
    font-size:38px;
   margin-top: 42px;
    text-align: left;
    width: 394px;
    font-family: $fontWeb01Light;
    .resaltado{
      font-family: $fontWeb01Bold;
    }
  }
  .btn{
    font-weight:bold;
    font-size:18px;
    .entypo-right-open{
      font-size: 20px !important;
    }
  }
}

.features-blocks-home{
  background-color: $bgFullWidth;
  margin-bottom:70px;
  .feature-block{
    text-align:center;
    h3{
      position: static;
      padding: 0;
      margin:0 0 16px 0;
      .text-hide{
        display:block;
      }
      i{
        width:100%;
        height:105px;
        display:block;
        position:static;
        &.entypo-use{
          background: url($rutaImagenes+"consumo.png") no-repeat center top;
        }
        &.entypo-efficiency{
          background: url($rutaImagenes+"eficiencia.png") no-repeat center top;
        }
        &.entypo-saving{
          background: url($rutaImagenes+"ahorro.png") no-repeat center top;
        }
      }
    }
    p{
      padding: 0;
      font-size:16px;
      color:#333;
      line-height:1.2;
    }
  }
}