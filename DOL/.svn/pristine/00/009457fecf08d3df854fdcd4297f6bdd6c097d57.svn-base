<div class="container wrapper-registro">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <p class="texto-introduccion">{{'registro_porque' | translate }}</p>
            <p>{{'registro_ventajas' | translate }}</p>
            <ul class="listado-con-iconos">
                <li>
                    <span class="numero-paso">1</span>
                    <p href="#" class="texto">{{'registro_paso1' | translate}}</p>
                </li>
                <li>
                    <span class="numero-paso">2</span>
                    <p href="#" class="texto">{{'registro_paso2' | translate}}</p>
                </li>
                <li>
                    <span class="numero-paso">3</span>
                    <p href="#" class="texto">{{'registro_paso3' | translate}}</p>
                </li>
            </ul>
            <p class="texto-introduccion">{{'registro_empieza_ahorrar' | translate}}</p>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <div class="nuevo-user">
                <h3 class="titulo-seccion-formulario">{{'registro_nuevo_usuario' | translate}}</h3>
                <p>{{'registro_registrado' | translate}} <a ui-sref="login">{{'registro_ahora' | translate}} </a>
                </p>
                <div class="row">
                    <form name="registroForm" novalidate ed-form ng-submit="registro()">
                        <div class="form-group" ng-class="{ 'has-error' : registroForm.mail.$invalid && !registroForm.mail.$pristine }">
                            <div class="col-xs-12">
                                <label for="mail" class="titulo-componente">{{'registro_email' | translate}}</label>
                                <input type="email" name="mail" id="mail" class="form-control input-lg campo-formulario" placeholder="{{'registro_email' | translate}}*" ng-model="registroFormModel.mail" required ed-validation>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error' : registroForm.confirmacionMail.$invalid && !registroForm.confirmacionMail.$pristine }">
                            <div class="col-xs-12">
                                <label for="confirmacionMail" class="titulo-componente">{{'registro_rep_email' | translate}}</label>
                                <input type="email" name="confirmacionMail" id="confirmacionMail" class="form-control input-lg campo-formulario" placeholder="{{'registro_rep_email' | translate}}*" ng-model="registroFormModel.confirmacionMail" ed-validate-equal="{{registroFormModel.mail}}" required ed-validation>

                            </div>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error' : registroForm.pass.$invalid && !registroForm.pass.$pristine }">
                            <div class="col-xs-6">
                                <label for="pass" class="titulo-componente">{{'registro_contrase単a' | translate}}</label>
                                <input type="password" name="pass" id="pass" class="form-control input-lg campo-formulario" placeholder="{{'registro_contrase単a' | translate}}*" ng-minlength="6" ng-model="registroFormModel.pass"  required ed-validation>
                            </div>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error' : registroForm.confirmacionPass.$invalid && !registroForm.confirmacionPass.$pristine }">
                            <div class="col-xs-6">
                                <label for="confirmacionPass" class="titulo-componente">{{'registro_rep_contrase単a' | translate}}</label>
                                <input type="password" name="confirmacionPass" id="confirmacionPass" class="form-control input-lg campo-formulario" placeholder="{{'registro_rep_contrase単a' | translate}}*" ng-model="registroFormModel.confirmacionPass" ed-validate-equal="{{registroFormModel.pass}}" ng-minlength="6" required ed-validation>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input type="checkbox" class="check" ng-model="registroFormModel.termCond" ng-true-value="true" ng-false-value="false"><a ui-sref="terminos-condiciones" target="_blank">{{'registro_condiciones' | translate}}</a>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="btn-group mt20 mb20">
                                    <button type="submit" class=" btn btn-lg btn-guardar botons" ng-disabled="registroForm.$invalid || !registroFormModel.termCond">{{'registro_registro' | translate}}
                                        <div class="btn-lg btn-guardar dropdown-toggle">
                                            <span class="icon continuar">&gt;</span>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
